%prep
  if ( zmodload -i zsh/zpty ) >/dev/null 2>&1; then
    . ./comptest
    comptestinit -z zsh
  else
    ZTST_unimplemented="the zsh/zpty module is not available"
  fi
  zpty_run 'bindkey "^T" .transpose-words'
  zpty_run 'bindkey "^B" .backward-word'

%test

  zletest $'aa bb\C-B\C-T'
0:Transpose two words
>BUFFER: bb aa
>CURSOR: 5
